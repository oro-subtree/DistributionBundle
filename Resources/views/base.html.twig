<!doctype html>
<!--[if IE 7 ]><html class="no-js ie ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]><html class="no-js ie ie8" lang="en"> <![endif]-->
<!--[if IE 9 ]><html class="no-js ie ie9" lang="en"> <![endif]-->
<!--[if (gte IE 10)|!(IE)]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{% block title %}  {% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/bundles/oroinstaller/css/style.css" />
    <script type="text/javascript" src="/bundles/oroinstaller/lib/jquery-2.0.3.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/bundles/orodistribution/css/style.css" />

    <link rel="stylesheet" type="text/css" href="/bundles/orodistribution/css/style.css" />
    <script type="text/javascript" src="/bundles/orodistribution/js/package.manager.js"></script>
    <script type="text/javascript">


        $(function(){
            var ajaxLoadingImage = $('.ajax-loading');
            $(document).ajaxStart(function(){
                ajaxLoadingImage.show();
            }).ajaxComplete(function(){
                ajaxLoadingImage.hide();
            }).ajaxError(function(){
                ajaxLoadingImage.hide();
                alert('error!');
            });

            var ajaxButtons=$('.ajax');
            ajaxButtons.on('click', function(){
                return false;
            });

            var pm = new PackageManager(
                "{{ path('oro_distribution_package_install') }}",
                "{{ path('oro_distribution_package_uninstall') }}",
                "{{ path('oro_distribution_package_update') }}"
            );
            ajaxButtons.filter('.install').on('click', function(){
                pm.install($(this).data('params'));
            });
            ajaxButtons.filter('.uninstall').on('click', function(){
                pm.uninstall($(this).data('params'));
            });
            ajaxButtons.filter('.update').on('click', function(){
                pm.update($(this).data('params'));
            });

        });
    </script>
</head>
<body>
<header class="header">
    <h1 class="logo">Package Management</h1>
</header>
<div class="wrapper">
    <div class="content">
        <img src="/bundles/oroinstaller/img/icon/wait.png" alt="" class="ajax-loading" />
        <div class="page-title clearfix">
            <h2 class="pull-left">{{ block('title') }}</h2>
            <div class="menu pull-right ">
                <a href="{{ path('oro_distribution_package_listinstalled') }}">Installed</a>
                <a href="{{ path('oro_distribution_package_listavailable') }}">Available</a>
                <a href="{{ path('oro_distribution_package_listupdates') }}">Updates</a>
            </div>
        </div>

        <div class="well">
            {% block body %} {% endblock %}
        </div>
    </div>
</div>
</body>
</html>
